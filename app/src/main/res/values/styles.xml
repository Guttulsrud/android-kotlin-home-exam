<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>


    <style name="titleStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>



    <style name="spinnerDropDownItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">28dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="bodyStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gotham_light</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="tinyStyle">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">12sp</item>
    </style>




</resources>
